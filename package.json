{
  "name": "fw-multinational-platform",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.0.2",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "@okta/okta-react": "^1.0.3",
    "@okta/okta-signin-widget": "^2.5.0",
    "axios": "^0.19.0",
    "chroma-js": "^2.0.3",
    "colors": "^1.1.2",
    "cross-env": "^5.2.0",
    "d3-scale": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jsonwebtoken": "^8.5.1",
    "react": "^16.2.0",
    "react-bootstrap": "^1.0.0-beta.9",
    "react-bootstrap-typeahead": "^3.4.5",
    "react-dom": "^16.2.0",
    "react-moment": "^0.9.2",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^3.0.1",
    "react-select": "^3.0.4",
    "react-simple-maps": "^0.12.1",
    "react-slack-chat": "^1.12.0",
    "react-tabs": "^3.0.0",
    "react-test-renderer": "^16.8.6",
    "react-tooltip": "^3.10.0",
    "react-world-flags": "^1.3.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.1",
    "talkjs": "^0.8.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.4.0",
    "@types/jest": "22.2.3"
  },
  "scripts": {
    "start": "cross-env PORT=8080 react-scripts start",
    "build": "cross-env CI=false react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "jest": "jest --coverage --coverageDirectory=coverage/jest --watchAll=false"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest-junit": {
    "output": "<rootDir>/test-results/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/src/**/dashboard/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/components/dashboard/**/*.{js,spec.js}",
      "!<rootDir>/src/components/dashboard/programs/**/*.js",
      "!<rootDir>/src/components/dashboard/Home.js",
      "!<rootDir>/src/components/programs/"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jestconfig/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/jestconfig/assetsTransformer.js"
    },
    "coverageReporters": [
      "text",
      "html",
      "cobertura",
	  "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 13,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  }
}
